@model DTO.Weather

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Weather</h4>
    <hr />
    <div class="row">
        <div class="col-lg-2">
            </div>
    <div class="col-lg-4 details">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City.Name)
            </dd>

            <dt>
               Minimum
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TemperatureMin) °C
            </dd>

            <dt>
                Maximum
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TemperatureMax) °C
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Humidity)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Humidity) %
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Precipitation)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Precipitation) mm/h
            </dd>

        </dl>
    </div>
    <div class="col-lg-4 details text-left">

        @switch (Model.State.Id)
        {
            case 1:
                <img class="img-responsive img imgDetails" src="~/icon/soleil.png" />
                break;
            case 2:
                <img class="img-responsive img imgDetails" src="~/icon/nuage.png" />
                break;
            case 3:
                <img class="img-responsive img imgDetails" src="~/icon/pluie.png" />
                break;

            case 4:
                <img class="img-responsive img imgDetails" src="~/icon/foudre.png" />
                break;
            case 5:
                <img class="img-responsive img imgDetails" src="~/icon/neige.png" />
                break;

        }
    </div>
        <div class="col-lg-2">
        </div>
</div>

    </div>

<div class="text">
    <button type="button" class="btn btn-default btn-sm but back">
        <span class="glyphicon glyphicon-arrow-left glyphiconBack"></span>  &nbsp
        @Html.ActionLink("Back to List", "Index")
    </button>

    <button type="button" class="btn btn-default btn-sm but back">
        <span class="glyphicon glyphicon glyphicon-pencil glyphiconBack"></span>  &nbsp
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
    </button>
</div>
